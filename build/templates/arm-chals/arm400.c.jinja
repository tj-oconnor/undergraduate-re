char* mutate(char s[]) {
    char *tmp;
    tmp=malloc(sizeof(char)*strlen(s));

    for (int i=0; i<strlen(s); i++) {
        tmp[i]=s[i]+{{rand_int}};
    }
    return tmp; 
}

