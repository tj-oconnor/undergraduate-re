int validate(char *guess){
  int l = 0;
  int h = strlen(guess) - 1;
  if (h!={{buffersize}}) {
    return 0;
  }
  while (h > l) {
    if (guess[l++] != guess[h--]) {
      return 0;
    }
  }
  return 1;
}


int challenge() {
